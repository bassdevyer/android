<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <!-- Title TextView -->
    <TextView
        android:text="@string/title"
        android:id="@+id/txt_title"
        style="@style/title_text"/>

    <!-- Spotify Streamer -->
    <Button
        android:text="@string/spotify_streamer"
        android:id="@+id/btn_spotify_streamer"
        android:layout_below="@+id/txt_title"
        style="@style/my_button"/>

    <!-- Scores App -->
    <Button
        android:text="@string/scores_app"
        android:id="@+id/btn_scores_app"
        android:layout_below="@+id/btn_spotify_streamer"
        style="@style/my_button"/>

    <!-- Library App -->
    <Button
        android:text="@string/library_app"
        android:id="@+id/btn_library_app"
        android:layout_below="@+id/btn_scores_app"
        style="@style/my_button"/>

    <!-- Build It Bigger -->
    <Button
        android:text="@string/build_it_bigger"
        android:id="@+id/btn_build_it_bigger"
        android:layout_below="@id/btn_library_app"
        style="@style/my_button"/>

    <!-- XYZ Reader -->
    <Button
        android:text="@string/xyz_reader"
        android:id="@+id/btn_xyz_reader"
        android:layout_below="@+id/btn_build_it_bigger"
        style="@style/my_button"/>

    <!-- Capstone: My Own App -->
    <Button
        android:text="@string/capstone_my_own_app"
        android:id="@+id/btn_capstone_my_own_app"
        android:layout_below="@+id/btn_xyz_reader"
        style="@style/my_button.red"/>

</RelativeLayout>
